{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Endless Sky data",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#topLevelKeywords"
		},
		{
			"include": "#shipKeywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"topLevelKeywords": {
			"patterns": [{
				"name": "keyword.control.endlesssky",
				"match": "^(color|conversation|effect|event|fleet|galaxy|government|hazard|interface|minable|mission|outfit|outfitter|person|phrase|planet|ship|shipyard|start|system|test|test-data|trade|landing message|star|news|rating|category|tip)\\b"
			}]
		},
		"shipKeywords": {
			"patterns": [{
				"name": "keyword.control.endlesssky",
				"match": "\\b(description|plural|noun|sprite|thumbnail|attributes|outfits|engine|reverse engine|steering engine|gun|turret|fighter|drone|bay|explode|final explode|load|never disabled|uncapturable|swizzle|attributes)\\b"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.endlesssky",
				"match": "\\b(add|and|or)\\b"
			}]
		},
		"strings": {
			"name": "string.quoted.double.endlesssky",
			"begin": "\"|`",
			"end": "\"|`",
			"patterns": [
				{
					"name": "constant.character.escape.endlesssky",
					"match": "(<)(.*?)(>)",
					"captures": {
						"0": {"name": "meta.bold.example"},
						"1": {"name": "punctuation.definition.bold.example"},
						"2": {"name": "markup.bold.example"},
						"3": {"name": "punctuation.definition.bold.example"}
					}
				},
				{
					"name": "constant.character.escape.endlesssky",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.endlesssky"
}
